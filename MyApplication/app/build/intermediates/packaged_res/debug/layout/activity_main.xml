<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:foregroundGravity="center"
        android:paddingTop="14dp"
        android:paddingBottom="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background='@drawable/shape_container'>

        <Spinner
            android:id="@+id/spinnerAccounts"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_spinner_switch"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="7dp" />

        <Spinner
            android:id="@+id/spinnerCalendar"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_spinner_switch"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="7dp" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="278dp"
            android:layout_height="139dp"
            android:layout_marginTop="16dp"
            android:background="#EA7979"
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerAccounts" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>